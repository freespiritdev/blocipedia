<h1>Edit Wiki</h1>

<div class="row">
  <div class="span6">
    <%= form_for @wiki do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :description %>
        <%= f.text_area :description, rows: 8 %>
        
        <%= f.label :public, class: 'checkbox' do %>
            <%= f.check_box :public %> Public wiki
          <% end %>

        <%= f.submit "Save", class: 'button' %>
    <% end %>
  </div>
</div